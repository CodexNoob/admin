generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Admin {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
}

model Student {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  studentId String
  username  String   @unique
  name      String
  surname   String
  email     String?  @unique
  phone     String   @unique
  address   String
  sex       Gender
  createdAt DateTime @default(now())
  results   Result[] @relation("StudentResults")
  events    Event[]  @relation("StudentEvents")
  birthday  DateTime
}

model Exam {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  startTime DateTime
  endTime   DateTime
  results   Result[] @relation("ExamResults")
}

model Result {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  score     Int
  examId    String  @db.ObjectId
  exam      Exam    @relation("ExamResults", fields: [examId], references: [id])
  studentId String  @db.ObjectId
  student   Student @relation("StudentResults", fields: [studentId], references: [id])
}

model Event {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime

  studentId String  @db.ObjectId
  student   Student @relation("StudentEvents", fields: [studentId], references: [id])
}

model Announcement {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  date        DateTime
}

enum Gender {
  MALE
  FEMALE
}
